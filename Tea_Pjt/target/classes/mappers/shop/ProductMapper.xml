<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 다른 mapper와 중복되지 않도록 네임스페이스 기재 -->
<mapper namespace="product">
	<select id="list_product" resultType="com.javalec.tea_pjt.model.shop.dto.ProductDTO">
		select * from product where product_type=#{product_type} order by product_name
	</select>	
	
	<select id="detail_product" resultType="com.javalec.tea_pjt.model.shop.dto.ProductDTO">
		select * from product where product_id=#{product_id}
	</select>
	
	<insert id="insert">
		insert into product values (seq_product.nextval,#{product_name},#{product_type},#{price},#{description},#{picture_url})
	</insert>
	
	<update id="update_product">
		update product set product_name = #{product_name},product_type=#{product_type},price=#{price},description=#{description},
		picture_url=#{picture_url} where product_id=#{product_id}
	</update>
	
	<delete id="delete">
		delete from product where product_id=#{product_id}
	</delete>
</mapper>














